<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PetNameTextView" >
        <item name="android:textColor">@color/colorPrimary_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PetBreedTextView" >
        <item name="android:textColor">@color/colorPrimary_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">@dimen/default_padding_quarter</item>
    </style>

    <style name="PetAttrTextView" >
        <item name="android:textColor">@color/colorSecondary_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingEnd">@dimen/default_padding_half</item>
        <item name="android:paddingTop">@dimen/default_padding_quarter</item>
    </style>

</resources>
